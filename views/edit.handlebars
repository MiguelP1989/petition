<div class="box">
    <div>
    </div>

    <div class="petitionform">
        <form action="/profile/edit" method="POST">
            <h3>Edit Profile</h3>
            <input type="text" name="first" value="{{first}}" placeholder="Name">
            <input type="text" name="last" value="{{last}}" placeholder="Last Name">
            <input type="number" name="age" value="{{age}}" placeholder="Age">
            <input type="text" name="city" value="{{city}}" placeholder="City">
            <input type="text" name="email" value="{{email}}" placeholder="Email">
            <input type="password" name="password" placeholder="Password..">
            <input type="text" name="url" value="{{url}}" placeholder="Homepage">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit">Update</button>
        </form>
    </div>
</div>
